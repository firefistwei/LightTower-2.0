<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="55dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="2dp"
    android:background="@drawable/grey_white_btn"
    android:descendantFocusability="blocksDescendants"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/msg_img1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:src="@drawable/random_head3" />

    <TextView
        android:id="@+id/msg_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/msg_img1"
        android:text="名字"
        android:textColor="#3f3f3f"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/msg_text2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/msg_text1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/msg_img1"
        android:singleLine="true"
        android:text="消息的内容。。。。。。。。。。。。。。。。。。。"
        android:textColor="#3f3f3f"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/msg_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/msg_text1"
        android:layout_alignRight="@id/msg_text2"
        android:text="昨天  下午"
        android:textColor="#3f3f3f"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/msg_img2"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/tiny_clock" />

    <TextView
        android:id="@+id/msg_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/msg_img2"
        android:layout_below="@+id/msg_img2"
        android:text="对 话"
        android:textColor="#4f4f4f"
        android:textSize="10sp" />

</RelativeLayout>