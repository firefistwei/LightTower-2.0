<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_grid"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bar"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:padding="3dp"
            android:src="@drawable/title_4" />
    </LinearLayout>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="600dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="@null" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="130dp"
                android:background="#232323" >

                <ImageView
                    android:id="@+id/area_anim_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/area_anim"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/area_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="25dp"
                    android:paddingLeft="5dp"
                    android:text="To Know More Talent People"
                    android:textColor="#FAFAFA" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="1dp"
                    android:layout_alignRight="@id/area_tv1"
                    android:layout_below="@id/area_tv1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:background="#FAFAFA" />

                <TextView
                    android:id="@+id/area_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/area_tv1"
                    android:layout_below="@id/area_tv1"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="6dp"
                    android:text="朋友就在身边"
                    android:textColor="#FAFAFA" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignRight="@id/area_tv1"
                    android:layout_below="@id/area_tv2"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/empty_btn04"
                    android:onClick="area_search_btn"
                    android:padding="4dp"
                    android:text="搜索圈子"
                    android:textColor="#FAFAFA"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="4dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:background="#78ac04" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#FAFAFA" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="6dp"
                    android:text="我的圈子"
                    android:textColor="#78AC04"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/area_main_areas_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#232323" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>