<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/hot_friend_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/hot_head_bg"
            android:padding="10dp"
            android:src="@drawable/random_head0" />

        <TextView
            android:id="@+id/hot_friend_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="好友姓名"
            android:textSize="12dp" />
    </LinearLayout>

    <HorizontalScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:descendantFocusability="blocksDescendants"
        android:scrollbars="@null" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="65dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical" >

                    

                    <ImageView
                        android:id="@+id/hot_time_style_img"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/time_type_0" />
                    <TextView
                        android:id="@+id/hot_time_style_text"
                        android:layout_above="@id/hot_time_style_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="2dp"
                        android:text="什么也没干"
                        android:textColor="#78ac04"
                        android:textSize="11sp" />
                    <View 
                        android:layout_below="@id/hot_time_style_img"
                        android:layout_centerHorizontal="true"
                        android:layout_width="2px"
                        android:layout_height="12dp"
                        android:layout_marginBottom="3dp"
                        android:background="#78ac04"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="400dp"
                    android:layout_height="3px"
                    android:layout_alignParentBottom="true"
                    android:background="#78ac04" />

                <LinearLayout
                    android:id="@+id/layout_one_hot_actives"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="horizontal" >
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>