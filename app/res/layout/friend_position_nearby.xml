<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/friend_position_nearby_click_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:clickable="true"
        android:background="@drawable/btn_page_green"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/friend_nearby_img1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@drawable/random_head3" />

        <TextView
            android:id="@+id/friend_nearby_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/friend_nearby_img1"
            android:text="名字"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/friend_nearby_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/friend_nearby_text1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/friend_nearby_img1"
            android:singleLine="true"
            android:text="200米以内"
            android:textColor="#000"
            android:textSize="14sp" />


    </RelativeLayout>

</LinearLayout>