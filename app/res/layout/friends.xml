<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#eee"
        android:clickable="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@drawable/title_bar3" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="好友灯"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/title_btn_fang"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="4dp" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/tiny_add_person" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="4dp"
                    android:text="添加"
                    android:textColor="#fff"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottombg"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/friends_search"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dip"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:layout_marginTop="8dip"
                android:background="@drawable/edit_input_bg"
                android:drawableLeft="@drawable/globle_search_icon"
                android:drawablePadding="8dip"
                android:hint="输入拼音首字母"
                android:singleLine="true"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@drawable/bottombg"
                android:orientation="horizontal"
                android:paddingRight="10dip" >

                <Button
                    android:id="@+id/friends_good"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
                    android:layout_marginTop="8dip"
                    android:layout_weight="1"
                    android:background="@drawable/bottomtabbutton_leftred"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="亲密好友"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="8dip"
                    android:src="@drawable/bottomtabbutton_separation" />

                <Button
                    android:id="@+id/friends_all"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
                    android:layout_marginTop="8dip"
                    android:layout_weight="1"
                    android:background="@drawable/bottomtabbutton_rightwhite"
                    android:paddingLeft="10dip"
                    android:text="全部"
                    android:textColor="#333333"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <ScrollView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            >
        <LinearLayout
            android:id="@+id/layout_time_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <ListView
                android:id="@+id/friends_display"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/friends_birthday"
                android:layout_weight="1"
                android:scrollbars="none"
                android:cacheColorHint="#00000000"
                android:divider="@drawable/list_line"
                android:listSelector="#00000000" >
            </ListView>

            <gen.wzp.main.ui.base.MyLetterListView
                android:id="@+id/friends_letter"
                android:layout_width="30dip"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dip" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>